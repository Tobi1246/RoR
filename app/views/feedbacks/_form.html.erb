<div class="row justify-content-center mt-3">
  <div class="col col-md-4">
    <h1><%= t('.feedback') %></h1>

    <%= form_with model: @feedback, local: true, data: { turbo: false } do |f| %>
      <%= render 'shared/errors', resource: @feedback %>

      <p><%= f.label :title %></p>
      <p><%= f.text_field :title %></p>

      <p><%= f.label :body %></p>
      <p><%= f.text_area :body %></p>

      <p><%= f.submit t('.create_feedback'), class: "btn btn-outline-success" %></p>
    <% end %>
