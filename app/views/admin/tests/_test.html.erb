<tr>
  <td class="align-middle">
    <%= content_tag :span, test.title, class: 'test-title',
                                       data: { test_id: test.id } %>
    <%= render 'form_inline', test: test == @test ? @test : test %>
  </td>
  <td class="align-middle"><%= test_level(test) %></td>
  <td class="align-middle"> <%= test.questions.pluck(:title) %></td>
  <td class="align-middle"> <%= link_to t('.show'), admin_test_path(test), class: "btn btn-outline-info" %></td>
  <td class="align-middle"> <%= link_to t('.edit'), edit_admin_test_path(test),
                                                    data: { test_id: test.id },
                                                    class: 'btn btn-outline-warning form-inline-link' %>  
   </td>
  <td class="align-middle"><%= link_to t('.create_question'), new_admin_test_question_path(test), class: "btn btn-outline-primary" %></td>
  <td class="align-middle"><%= button_to t('.delete_test'), admin_test_path(test), class: "btn btn-outline-danger",
                                                              method: :delete %></td>
</tr>
