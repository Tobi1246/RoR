<%= form_with model: [:admin, @test], local: true, data: { turbo: false } do |f| %>
  <%= render 'shared/errors', recource: @test %>

  <p><%= f.label :title, "Test title" %></p>
  <p><%= f.text_field :title %></p>
  <p><%= f.label :level, "Level" %></p>
  <p><%= f.number_field :level %></p>
  <p>
    <%= f.label :category_id, "Category " %>
    <%= f.collection_select :category_id, Category.all, :id, :title, prompt: true %>
  </p>
  <p><%= f.submit 'Create' %></p>
<% end %>
