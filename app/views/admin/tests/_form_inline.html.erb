<%= form_with model: [:admin, test], url: update_inline_admin_test_path(test),
                                     local: true,
                                     class: 'form-inline ',
                                     html: { style: 'display: none' },
                                     data: { test_id: test.id, turbo: false } do |f| %>

  <p><%= f.text_field :title, class: 'form-control mr-2' %></p>

  <p><%= f.submit t('.submit'), class: "btn btn-outline-success" %></p>

<% end %>
