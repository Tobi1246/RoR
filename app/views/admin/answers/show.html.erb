<p><b><%= t('.question') %> </b><%= @answer.question.title %></p>


<p>
  <b><%= t('.answer') %></b>
  <%= @answer.body %>
</p>

<p>
  <b><%= t('.correct') %></b>
  <%= @answer.correct %>
</p>

<%= button_to t('.delete_answer'),
              admin_answer_path(@answer),
              class: "btn btn-outline-danger",             
              method: :delete,
              data: { confirm: 'Are you sure?' } %>
<%= link_to t('.edit'), edit_admin_answer_path(@answer), class: "btn btn-outline-warning mt-1" %> |
<%= link_to t('.back'), admin_question_path(@answer.question), class: "btn btn-outline-dark" %>
