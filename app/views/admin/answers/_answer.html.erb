<li class="table">
  <%= answer.body %>
  <%= link_to t('.show'), admin_answer_path(answer), class: "btn btn-outline-primary" %>
  <%= link_to t('.edit'), edit_admin_answer_path(answer), class: "btn btn-outline-warning" %>
  <%= button_to t('.delete'),
              admin_answer_path(answer),
              class: "btn btn-outline-danger",             
              method: :delete,
              data: { confirm: 'Are you sure?' } %>
</li>
