<h1>Test</h1>
<p>Title: <%= @question.test.title %></p>
<p>Question: <%= @question.title %></p>
<h2>Answers</h2>

<ol>
  <%= render @question.answers %>
</ol>
<div><%= link_to 'New answer', new_admin_question_answer_path(@question), class: "btn btn-outline-info" %></div>
<div><%= link_to 'Edit question', edit_admin_question_path(@question), class: "btn btn-outline-warning mt-1",
                                                                       method: :get%></div>
<div class="mt-1"><%= button_to 'Delete question', admin_question_path(@question),
                                          class: "btn btn-outline-danger mt-1",
                                          method: :delete,
                                          data:   { confirm: 'Accept?' } %></div>

<br><div><%= link_to 'Back', admin_test_path(@question.test), class: 'btn btn-outline-dark', method: :get %></div>             
<div><%= link_to 'Main page', admin_tests_path, class: 'btn btn-outline-dark mt-1', method: :get %></div>

