<h1>Passing the <%= @test_passage.test.title %> Test</h1>

<b><%= @test_passage.current_question.title %></b>

<%= form_with url: test_passage_path(@test_passage), local: true, method: :put do |f| %>
  <%= f.collection_check_boxes :answers_ids, @test_passage.current_question.answers, :id, :body, include_hidder: false do |b| %>
    <p>
      <%= b.check_box id: "answers_ids_#{b.object.id}" %>
      <%= b.label %>
    </p>
  <% end %>
  <p><%= f.submit 'Next' %></p>
<% end %>
