<!DOCTYPE html>
<html>
  <head>
    <title>Testguru</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>

    <% if @current_user.present? %>
      <p class="nav user">Welcom,<b><%= current_user.firstname %></b> <%= link_to 'Guru', root_path %></p>
      <p class="nav user"><%= link_to 'Quit', quit_path, method: :delete %></p> 
    <% end %> 

    <% if @current_user.nil? %>
      <p class="nav user"><%= link_to 'Login', login_path %> <%= link_to 'Singup', singup_path %></p> 
    <% end %> 

    <%= yield %>
    <%= render 'layouts/footer' %>
  </body>
</html>
